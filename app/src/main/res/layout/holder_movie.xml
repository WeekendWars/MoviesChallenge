<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_2m"
    android:layout_marginEnd="@dimen/_2m"
    android:layout_marginLeft="@dimen/_2m"
    android:layout_marginRight="@dimen/_2m"
    android:layout_marginStart="@dimen/_2m">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/coverView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/holder_cover_size"
            android:background="#BDBDBD"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2m"
            android:textAppearance="@style/AppTheme.Font.Primary"
            tools:text="Film title" />

        <TextView
            android:id="@+id/descriptionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_2m"
            android:layout_marginLeft="@dimen/_2m"
            android:layout_marginRight="@dimen/_2m"
            android:layout_marginStart="@dimen/_2m"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/AppTheme.Font.Secondary"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/votesView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_2m"
            android:drawableLeft="@drawable/vector_star"
            android:drawablePadding="@dimen/_1m"
            android:drawableStart="@drawable/vector_star"
            android:textAppearance="@style/AppTheme.Font.Secondary"
            tools:text="24" />
    </LinearLayout>
</android.support.v7.widget.CardView>
