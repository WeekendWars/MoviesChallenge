<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_2m"
    app:cardElevation="@dimen/_05m">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/holder_cover_size"
            android:background="@color/colorLightGray" />

        <View
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_margin="@dimen/_2m"
            android:background="@drawable/gradient_skeleton" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="@dimen/_2m"
            android:background="@drawable/gradient_skeleton" />

        <View
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginEnd="@dimen/_2m"
            android:layout_marginLeft="@dimen/_2m"
            android:layout_marginRight="@dimen/_2m"
            android:layout_marginStart="@dimen/_2m"
            android:background="@drawable/gradient_skeleton" />

        <View
            android:layout_width="48dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_2m"
            android:background="@drawable/gradient_skeleton" />
    </LinearLayout>
</android.support.v7.widget.CardView>
